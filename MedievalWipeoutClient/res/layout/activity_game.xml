<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.guntzergames.medievalwipeout.activities.GameActivity" >

    <TextView
        android:id="@+id/gameInfos"
        style="@style/Section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/not_initialized" />

    <ImageView
        android:id="@+id/beingModified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/being_modified"
        android:src="@drawable/green" />

    <RelativeLayout
        android:id="@+id/opponentZone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gameInfos" >

        <TextView
            android:id="@+id/opponentTradeLibel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trade" />

        <TextView
            android:id="@+id/opponentTradeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/opponentTradeLibel"
            android:text="@string/not_initialized" />

        <TextView
            android:id="@+id/opponentGoldLibel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/opponentTradeLibel"
            android:text="@string/gold" />

        <TextView
            android:id="@+id/opponentGoldValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/opponentTradeLibel"
            android:layout_toRightOf="@id/opponentGoldLibel"
            android:text="@string/not_initialized" />

        <TextView
            android:id="@+id/opponentDefenseLibel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/opponentTradeValue"
            android:text="@string/defense" />

        <TextView
            android:id="@+id/opponentDefenseValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/opponentDefenseLibel"
            android:text="@string/not_initialized" />

        <TextView
            android:id="@+id/opponentFaithLibel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/opponentDefenseValue"
            android:text="@string/faith" />

        <TextView
            android:id="@+id/opponentFaithValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/opponentFaithLibel"
            android:text="@string/not_initialized" />

        <TextView
            android:id="@+id/opponentLifePointsLibel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/opponentFaithValue"
            android:text="@string/life_points" />

        <TextView
            android:id="@+id/opponentLifePointsValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/opponentLifePointsLibel"
            android:text="@string/not_initialized" />

        <LinearLayout
            android:id="@+id/opponentField"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/fieldHeight"
            android:layout_below="@id/opponentGoldLibel"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/opponentFieldDefense"
                style="@style/FieldStyle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/frame_border_defense_highlightable"
                android:orientation="horizontal" >

                <com.guntzergames.medievalwipeout.layouts.CardLayout
                    android:id="@+id/opponentFieldDefenseCard0"
                    style="@style/CardStyle"
                    android:layout_width="@dimen/cardWidth"
                    android:layout_height="@dimen/cardHeight"
                    android:background="@drawable/card_border"
                    android:padding="5dp" >
                </com.guntzergames.medievalwipeout.layouts.CardLayout>

                <com.guntzergames.medievalwipeout.layouts.CardLayout
                    android:id="@+id/opponentFieldDefenseCard1"
                    style="@style/CardStyle"
                    android:layout_width="@dimen/cardWidth"
                    android:layout_height="@dimen/cardHeight"
                    android:background="@drawable/card_border"
                    android:padding="5dp" >
                </com.guntzergames.medievalwipeout.layouts.CardLayout>

                <com.guntzergames.medievalwipeout.layouts.CardLayout
                    android:id="@+id/opponentFieldDefenseCard2"
                    style="@style/CardStyle"
                    android:layout_width="@dimen/cardWidth"
                    android:layout_height="@dimen/cardHeight"
                    android:background="@drawable/card_border"
                    android:padding="5dp" >
                </com.guntzergames.medievalwipeout.layouts.CardLayout>

                <com.guntzergames.medievalwipeout.layouts.CardLayout
                    android:id="@+id/opponentFieldDefenseCard3"
                    style="@style/CardStyle"
                    android:layout_width="@dimen/cardWidth"
                    android:layout_height="@dimen/cardHeight"
                    android:background="@drawable/card_border"
                    android:padding="5dp" >
                </com.guntzergames.medievalwipeout.layouts.CardLayout>

                <com.guntzergames.medievalwipeout.layouts.CardLayout
                    android:id="@+id/opponentFieldDefenseCard4"
                    style="@style/CardStyle"
                    android:layout_width="@dimen/cardWidth"
                    android:layout_height="@dimen/cardHeight"
                    android:background="@drawable/card_border"
                    android:padding="5dp" >
                </com.guntzergames.medievalwipeout.layouts.CardLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/opponentFieldAttack"
                style="@style/FieldStyle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/frame_border_highlightable"
                android:orientation="horizontal" >

                <com.guntzergames.medievalwipeout.layouts.CardLayout
                    android:id="@+id/opponentFieldAttackCard0"
                    style="@style/CardStyle"
                    android:layout_width="@dimen/cardWidth"
                    android:layout_height="@dimen/cardHeight"
                    android:background="@drawable/card_border"
                    android:padding="5dp" >
                </com.guntzergames.medievalwipeout.layouts.CardLayout>

                <com.guntzergames.medievalwipeout.layouts.CardLayout
                    android:id="@+id/opponentFieldAttackCard1"
                    style="@style/CardStyle"
                    android:layout_width="@dimen/cardWidth"
                    android:layout_height="@dimen/cardHeight"
                    android:background="@drawable/card_border"
                    android:padding="5dp" >
                </com.guntzergames.medievalwipeout.layouts.CardLayout>

                <com.guntzergames.medievalwipeout.layouts.CardLayout
                    android:id="@+id/opponentFieldAttackCard2"
                    style="@style/CardStyle"
                    android:layout_width="@dimen/cardWidth"
                    android:layout_height="@dimen/cardHeight"
                    android:background="@drawable/card_border"
                    android:padding="5dp" >
                </com.guntzergames.medievalwipeout.layouts.CardLayout>

                <com.guntzergames.medievalwipeout.layouts.CardLayout
                    android:id="@+id/opponentFieldAttackCard3"
                    style="@style/CardStyle"
                    android:layout_width="@dimen/cardWidth"
                    android:layout_height="@dimen/cardHeight"
                    android:background="@drawable/card_border"
                    android:padding="5dp" >
                </com.guntzergames.medievalwipeout.layouts.CardLayout>

                <com.guntzergames.medievalwipeout.layouts.CardLayout
                    android:id="@+id/opponentFieldAttackCard4"
                    style="@style/CardStyle"
                    android:layout_width="@dimen/cardWidth"
                    android:layout_height="@dimen/cardHeight"
                    android:background="@drawable/card_border"
                    android:padding="5dp" >
                </com.guntzergames.medievalwipeout.layouts.CardLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/playerZone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/opponentZone" >

        <TextView
            android:id="@+id/playerTradeLibel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trade" />

        <TextView
            android:id="@+id/playerTradeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/playerTradeLibel"
            android:text="@string/not_initialized" />

        <TextView
            android:id="@+id/playerGoldLibel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/playerTradeLibel"
            android:text="@string/gold" />

        <TextView
            android:id="@+id/playerGoldValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/playerTradeValue"
            android:layout_toRightOf="@id/playerGoldLibel"
            android:text="@string/not_initialized" />

        <TextView
            android:id="@+id/playerDefenseLibel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/playerTradeValue"
            android:text="@string/defense" />

        <TextView
            android:id="@+id/playerDefenseValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/playerDefenseLibel"
            android:text="@string/not_initialized" />

        <TextView
            android:id="@+id/playerFaithLibel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/playerDefenseValue"
            android:text="@string/faith" />

        <TextView
            android:id="@+id/playerFaithValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/playerFaithLibel"
            android:text="@string/not_initialized" />

        <TextView
            android:id="@+id/playerLifePointsLibel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/playerFaithValue"
            android:text="@string/life_points" />

        <TextView
            android:id="@+id/playerLifePointsValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/playerLifePointsLibel"
            android:text="@string/not_initialized" />

        <LinearLayout
            android:id="@+id/playerField"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/fieldHeight"
            android:layout_below="@id/playerGoldLibel"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/playerFieldDefense"
                style="@style/FieldStyle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/frame_border_defense_highlightable"
                android:orientation="horizontal" >

                <com.guntzergames.medievalwipeout.layouts.CardLayout
                    android:id="@+id/playerFieldDefenseCard0"
                    style="@style/CardStyle"
                    android:layout_width="@dimen/cardWidth"
                    android:layout_height="@dimen/cardHeight"
                    android:background="@drawable/card_border"
                    android:padding="5dp" >
                </com.guntzergames.medievalwipeout.layouts.CardLayout>

                <com.guntzergames.medievalwipeout.layouts.CardLayout
                    android:id="@+id/playerFieldDefenseCard1"
                    style="@style/CardStyle"
                    android:layout_width="@dimen/cardWidth"
                    android:layout_height="@dimen/cardHeight"
                    android:background="@drawable/card_border"
                    android:padding="5dp" >
                </com.guntzergames.medievalwipeout.layouts.CardLayout>

                <com.guntzergames.medievalwipeout.layouts.CardLayout
                    android:id="@+id/playerFieldDefenseCard2"
                    style="@style/CardStyle"
                    android:layout_width="@dimen/cardWidth"
                    android:layout_height="@dimen/cardHeight"
                    android:background="@drawable/card_border"
                    android:padding="5dp" >
                </com.guntzergames.medievalwipeout.layouts.CardLayout>

                <com.guntzergames.medievalwipeout.layouts.CardLayout
                    android:id="@+id/playerFieldDefenseCard3"
                    style="@style/CardStyle"
                    android:layout_width="@dimen/cardWidth"
                    android:layout_height="@dimen/cardHeight"
                    android:background="@drawable/card_border"
                    android:padding="5dp" >
                </com.guntzergames.medievalwipeout.layouts.CardLayout>

                <com.guntzergames.medievalwipeout.layouts.CardLayout
                    android:id="@+id/playerFieldDefenseCard4"
                    style="@style/CardStyle"
                    android:layout_width="@dimen/cardWidth"
                    android:layout_height="@dimen/cardHeight"
                    android:background="@drawable/card_border"
                    android:padding="5dp" >
                </com.guntzergames.medievalwipeout.layouts.CardLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/playerFieldAttack"
                style="@style/FieldStyle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/frame_border_highlightable"
                android:orientation="horizontal" >

                <com.guntzergames.medievalwipeout.layouts.CardLayout
                    android:id="@+id/playerFieldAttackCard0"
                    style="@style/CardStyle"
                    android:layout_width="@dimen/cardWidth"
                    android:layout_height="@dimen/cardHeight"
                    android:background="@drawable/card_border"
                    android:padding="5dp" >
                </com.guntzergames.medievalwipeout.layouts.CardLayout>

                <com.guntzergames.medievalwipeout.layouts.CardLayout
                    android:id="@+id/playerFieldAttackCard1"
                    style="@style/CardStyle"
                    android:layout_width="@dimen/cardWidth"
                    android:layout_height="@dimen/cardHeight"
                    android:background="@drawable/card_border"
                    android:padding="5dp" >
                </com.guntzergames.medievalwipeout.layouts.CardLayout>

                <com.guntzergames.medievalwipeout.layouts.CardLayout
                    android:id="@+id/playerFieldAttackCard2"
                    style="@style/CardStyle"
                    android:layout_width="@dimen/cardWidth"
                    android:layout_height="@dimen/cardHeight"
                    android:background="@drawable/card_border"
                    android:padding="5dp" >
                </com.guntzergames.medievalwipeout.layouts.CardLayout>

                <com.guntzergames.medievalwipeout.layouts.CardLayout
                    android:id="@+id/playerFieldAttackCard3"
                    style="@style/CardStyle"
                    android:layout_width="@dimen/cardWidth"
                    android:layout_height="@dimen/cardHeight"
                    android:background="@drawable/card_border"
                    android:padding="5dp" >
                </com.guntzergames.medievalwipeout.layouts.CardLayout>

                <com.guntzergames.medievalwipeout.layouts.CardLayout
                    android:id="@+id/playerFieldAttackCard4"
                    style="@style/CardStyle"
                    android:layout_width="@dimen/cardWidth"
                    android:layout_height="@dimen/cardHeight"
                    android:background="@drawable/card_border"
                    android:padding="5dp" >
                </com.guntzergames.medievalwipeout.layouts.CardLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/playerHand"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/fieldHeight"
            android:layout_below="@id/playerField"
            android:background="@drawable/frame_border_highlightable"
            android:orientation="horizontal" >

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/playerHandCard0"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/playerHandCard1"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/playerHandCard2"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/playerHandCard3"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/playerHandCard4"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/playerHandCard5"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/playerHandCard6"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/playerHandCard7"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/playerHandCard8"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/playerHandCard9"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>
        </LinearLayout>

        <Button
            android:id="@+id/stopGameButton"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/stop_game"
            android:text="@string/stop_game" />

        <Button
            android:id="@+id/homeButton"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/stopGameButton"
            android:text="@string/home" />

        <Button
            android:id="@+id/getGameButton"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/homeButton"
            android:text="@string/refresh_game" />

        <Button
            android:id="@+id/nextPhaseButton"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/getGameButton"
            android:text="@string/next_phase" />

        <ImageButton
            android:id="@+id/deckButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/nextPhaseButton"
            android:contentDescription="@string/deck"
            android:src="@drawable/abc_ab_bottom_solid_dark_holo" />

        <LinearLayout
            android:id="@+id/gameResources"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/frame_border_highlightable"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/gameTradeRow"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:background="@drawable/card_border"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trade" />

                <TextView
                    android:id="@+id/gameTrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/not_initialized" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gameDefenseRow"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:background="@drawable/card_border"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/defense" />

                <TextView
                    android:id="@+id/gameDefense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/not_initialized" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gameFaithRow"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:background="@drawable/card_border"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/faith" />

                <TextView
                    android:id="@+id/gameFaith"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/not_initialized" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/playerChoices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/frame_player_choices_highlightable" >

        <com.guntzergames.medievalwipeout.layouts.CardLayout
            android:id="@+id/resourceCard0"
            style="@style/CardStyle"
            android:layout_width="@dimen/cardWidth"
            android:layout_height="@dimen/cardHeight"
            android:layout_alignParentLeft="true"
            android:padding="10dp" >
        </com.guntzergames.medievalwipeout.layouts.CardLayout>

        <com.guntzergames.medievalwipeout.layouts.CardLayout
            android:id="@+id/resourceCard1"
            style="@style/CardStyle"
            android:layout_width="@dimen/cardWidth"
            android:layout_height="@dimen/cardHeight"
            android:layout_toRightOf="@id/resourceCard0"
            android:padding="10dp" >
        </com.guntzergames.medievalwipeout.layouts.CardLayout>

        <com.guntzergames.medievalwipeout.layouts.CardLayout
            android:id="@+id/playerDeckCard0"
            style="@style/CardStyle"
            android:layout_width="@dimen/cardWidth"
            android:layout_height="@dimen/cardHeight"
            android:layout_alignParentLeft="true"
            android:padding="10dp" >
        </com.guntzergames.medievalwipeout.layouts.CardLayout>

        <com.guntzergames.medievalwipeout.layouts.CardLayout
            android:id="@+id/playerDeckCard1"
            style="@style/CardStyle"
