<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.guntzergames.medievalwipeout.activities.GameActivity" >

    <TextView
        android:id="@+id/gameInfos"
        style="@style/Section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/not_initialized" />

    <ImageView
        android:id="@+id/beingModified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:contentDescription="Being modified"
        android:src="@drawable/green" />

    <RelativeLayout
        android:id="@+id/opponentZone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gameInfos" >

        <TextView
            android:id="@+id/opponentTradeLibel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trade" />

        <TextView
            android:id="@+id/opponentTradeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/opponentTradeLibel"
            android:text="@string/not_initialized" />

        <TextView
            android:id="@+id/opponentGoldLibel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/opponentTradeLibel"
            android:text="@string/gold" />

        <TextView
            android:id="@+id/opponentGoldValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/opponentTradeLibel"
            android:layout_toRightOf="@id/opponentGoldLibel"
            android:text="@string/not_initialized" />

        <TextView
            android:id="@+id/opponentDefenseLibel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/opponentTradeValue"
            android:text="@string/defense" />

        <TextView
            android:id="@+id/opponentDefenseValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/opponentDefenseLibel"
            android:text="@string/not_initialized" />

        <TextView
            android:id="@+id/opponentFaithLibel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/opponentDefenseValue"
            android:text="@string/faith" />

        <TextView
            android:id="@+id/opponentFaithValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/opponentFaithLibel"
            android:text="@string/not_initialized" />

        <TextView
            android:id="@+id/opponentLifePointsLibel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/opponentFaithValue"
            android:text="@string/life_points" />

        <TextView
            android:id="@+id/opponentLifePointsValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/opponentLifePointsLibel"
            android:text="@string/not_initialized" />

        <LinearLayout
            android:id="@+id/opponentField"
            style="@style/FieldStyle"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/fieldHeight"
            android:background="@drawable/frame_border"
            android:layout_below="@id/opponentGoldLibel" >

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/opponentFieldCard0"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/opponentFieldCard1"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/opponentFieldCard2"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/opponentFieldCard3"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/opponentFieldCard4"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/opponentFieldCard5"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/opponentFieldCard6"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/opponentFieldCard7"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/opponentFieldCard8"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/opponentFieldCard9"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/playerZone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/opponentZone" >

        <TextView
            android:id="@+id/playerTradeLibel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trade" />

        <TextView
            android:id="@+id/playerTradeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/playerTradeLibel"
            android:text="@string/not_initialized" />

        <TextView
            android:id="@+id/playerGoldLibel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/playerTradeLibel"
            android:text="@string/gold" />

        <TextView
            android:id="@+id/playerGoldValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/playerTradeValue"
            android:layout_toRightOf="@id/playerGoldLibel"
            android:text="@string/not_initialized" />

        <TextView
            android:id="@+id/playerDefenseLibel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/playerTradeValue"
            android:text="@string/defense" />

        <TextView
            android:id="@+id/playerDefenseValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/playerDefenseLibel"
            android:text="@string/not_initialized" />

        <TextView
            android:id="@+id/playerFaithLibel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/playerDefenseValue"
            android:text="@string/faith" />

        <TextView
            android:id="@+id/playerFaithValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/playerFaithLibel"
            android:text="@string/not_initialized" />

        <TextView
            android:id="@+id/playerLifePointsLibel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/playerFaithValue"
            android:text="@string/life_points" />

        <TextView
            android:id="@+id/playerLifePointsValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/playerLifePointsLibel"
            android:text="@string/not_initialized" />

        <LinearLayout
            android:id="@+id/playerField"
            style="@style/FieldStyle"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/fieldHeight"
            android:layout_below="@id/playerGoldLibel"
            android:background="@drawable/frame_border" >

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/playerFieldCard0"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/playerFieldCard1"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/playerFieldCard2"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/playerFieldCard3"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/playerFieldCard4"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/playerFieldCard5"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/playerFieldCard6"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/playerFieldCard7"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/playerFieldCard8"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/playerFieldCard9"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/playerHandLibel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/playerField"
            android:text="Hand" />

        <LinearLayout
            android:id="@+id/playerHand"
            style="@style/FieldStyle"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/fieldHeight"
            android:layout_below="@id/playerHandLibel"
            android:background="@drawable/frame_border"
            android:orientation="horizontal" >

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/playerHandCard0"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/playerHandCard1"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/playerHandCard2"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/playerHandCard3"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/playerHandCard4"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/playerHandCard5"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/playerHandCard6"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/playerHandCard7"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/playerHandCard8"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>

            <com.guntzergames.medievalwipeout.layouts.CardLayout
                android:id="@+id/playerHandCard9"
                style="@style/CardStyle"
                android:layout_width="@dimen/cardWidth"
                android:layout_height="@dimen/cardHeight"
                android:background="@drawable/card_border"
                android:padding="5dp" >
            </com.guntzergames.medievalwipeout.layouts.CardLayout>
        </LinearLayout>

        <Button
            android:id="@+id/stopGameButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/stop_game"
            android:text="@string/stop_game" />

        <Button
            android:id="@+id/homeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/stopGameButton"
            android:text="@string/home" />

        <Button
            android:id="@+id/getGameButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/homeButton"
            android:text="Get Game" />

        <Button
            android:id="@+id/nextPhaseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/getGameButton"
            android:text="Next Phase" />

        <ImageButton
            android:id="@+id/deckButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/nextPhaseButton"
            android:contentDescription="@string/deck"
            android:src="@drawable/abc_ab_bottom_solid_dark_holo" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/playerChoices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/backgroundModal" >

        <com.guntzergames.medievalwipeout.layouts.CardLayout
            android:id="@+id/resourceCard0"
            style="@style/CardStyle"
            android:layout_width="@dimen/cardWidth"
            android:layout_height="@dimen/cardHeight"
            android:layout_alignParentLeft="true"
            android:padding="10dp" >
        </com.guntzergames.medievalwipeout.layouts.CardLayout>

        <com.guntzergames.medievalwipeout.layouts.CardLayout
            android:id="@+id/resourceCard1"
            style="@style/CardStyle"
            android:layout_width="@dimen/cardWidth"
            android:layout_height="@dimen/cardHeight"
            android:layout_toRightOf="@id/resourceCard0"
            android:padding="10dp" >
        </com.guntzergames.medievalwipeout.layouts.CardLayout>

        <com.guntzergames.medievalwipeout.layouts.CardLayout
            android:id="@+id/playerDeckCard0"
            style="@style/CardStyle"
            android:layout_width="@dimen/cardWidth"
            android:layout_height="@dimen/cardHeight"
            android:layout_alignParentLeft="true"
            android:padding="10dp" >
        </com.guntzergames.medievalwipeout.layouts.CardLayout>

        <com.guntzergames.medievalwipeout.layouts.CardLayout
            android:id="@+id/playerDeckCard1"
            style="@style/CardStyle"
            android:layout_width="@dimen/cardWidth"
            android:layout_height="@dimen/cardHeight"
            android:layout_toRightOf="@id/playerDeckCard0"
            android:padding="10dp" >
        </com.guntzergames.medievalwipeout.layouts.CardLayout>
    </RelativeLayout>

    <com.guntzergames.medievalwipeout.layouts.CardLayout
        android:id="@+id/gameEvent"
        style="@style/CardStyle"
        android:layout_width="@dimen/cardWidth"
        android:layout_height="@dimen/cardHeight"
        android:layout_centerInParent="true"
        android:padding="10dp" >
    </com.guntzergames.medievalwipeout.layouts.CardLayout>

    <com.guntzergames.medievalwipeout.layouts.CardLayout
        android:id="@+id/card_layout_detail"
        style="@style/CardStyle.Detail"
        android:layout_width="@dimen/cardDetailWidth"
        android:layout_height="@dimen/cardDetailHeight"
        android:layout_centerInParent="true"
        android:background="@drawable/card_border"
        android:padding="10dp" >
    </com.guntzergames.medievalwipeout.layouts.CardLayout>

</RelativeLayout>