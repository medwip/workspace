<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/cardLayoutImage"
        android:layout_width="@dimen/cardImageWidth"
        android:layout_height="wrap_content"
        android:contentDescription="@string/not_initialized" />

    <com.guntzergames.medievalwipeout.layouts.ElementLayout
        android:id="@+id/nameLayout"
        style="@style/CardStyle.Detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.guntzergames.medievalwipeout.layouts.ElementLayout
        android:id="@+id/cardLayoutNumberOfCardsLayout"
        style="@style/CardStyle.LifePoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" />
    
    <TextView
        android:id="@+id/cardLayoutAttack"
        style="@style/CardStyle.Attack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/cardLayoutLifePoints"
        style="@style/CardStyle.LifePoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/cardLayoutCurrentLifePoints"
        style="@style/CardStyle.LifePoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    

    <TextView
        android:id="@+id/cardLayoutTrade"
        style="@style/CardStyle.LifePoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/not_initialized"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/cardLayoutDefense"
        style="@style/CardStyle.LifePoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/not_initialized"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/cardLayoutFaith"
        style="@style/CardStyle.LifePoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/not_initialized"
        android:visibility="invisible" />

</LinearLayout>